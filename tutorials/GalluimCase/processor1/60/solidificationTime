FoamFile
{
    version     2.0;
    format      binary;
    class       volScalarField;
    location    "60";
    object      solidificationTime;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [0 0 1 0 0 0 0];

internalField   uniform -1;

boundaryField
{
    left
    {
        type            zeroGradient;
    }
    right
    {
        type            zeroGradient;
    }
    bottom
    {
        type            zeroGradient;
    }
    top
    {
        type            zeroGradient;
    }
    frontAndBack
    {
        type            empty;
    }
    procBoundary1to0
    {
        type            processor;
        value           uniform -1;
    }
    procBoundary1to2
    {
        type            processor;
        value           uniform -1;
    }
    procBoundary1to4
    {
        type            processor;
        value           uniform -1;
    }
}


