FoamFile
{
    version     2.0;
    format      binary;
    class       volScalarField;
    location    "0";
    object      Temperature;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [0 0 0 1 0 0 0];

internalField   uniform 301.3;

boundaryField
{
    left
    {
        type            fixedValue;
        value           nonuniform 
0
;
    }
    right
    {
        type            inletOutlet;
        inletValue      uniform 301.3;
        value           uniform 301.3;
    }
    bottom
    {
        type            zeroGradient;
    }
    top
    {
        type            zeroGradient;
    }
    frontAndBack
    {
        type            empty;
    }
    procBoundary3to0
    {
        type            processor;
        value           uniform 301.3;
    }
    procBoundary3to4
    {
        type            processor;
        value           uniform 301.3;
    }
}


